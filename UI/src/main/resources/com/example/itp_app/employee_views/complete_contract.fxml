<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"  fx:controller="com.example.itp_app.Employee.ContractController" prefWidth="400.0" prefHeight="400.0">
    <ScrollPane fitToWidth="true" prefWidth="400.0" prefHeight="400.0">
        <!-- Correct padding format using FXML 'Insets' -->
        <VBox spacing="10" alignment="TOP_CENTER">
            <!-- Specify padding here using the correct FXML format -->
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="VIN"/>
            <TextField fx:id="vinTextField" prefWidth="280"/>

            <Label text="Manufacturer"/>
            <TextField fx:id="manufacturerTextField" prefWidth="280"/>

            <Label text="Model"/>
            <TextField fx:id="modelTextField" prefWidth="280"/>

            <Label text="Production Year"/>
            <TextField fx:id="productionYearTextField" prefWidth="280"/>

            <Label text="Fuel Type"/>
            <TextField fx:id="fuelTypeTextField" prefWidth="280"/>

            <Label text="Plate Number"/>
            <TextField fx:id="plateNumberTextField" prefWidth="280"/>

            <Label text="Color"/>
            <TextField fx:id="colorTextField" prefWidth="280"/>

            <Label text="Cubic Volume"/>
            <TextField fx:id="cubicVolumeTextField" prefWidth="280"/>

            <Label text="Pollution Coefficient"/>
            <TextField fx:id="pollutionCoefficientTextField" prefWidth="280"/>

            <Label text="Observations"/>
            <TextField fx:id="observationsTextField" prefWidth="280"/>

            <Button text="Complete" fx:id="completeButton" prefWidth="280"/>
        </VBox>
    </ScrollPane>
</AnchorPane>
