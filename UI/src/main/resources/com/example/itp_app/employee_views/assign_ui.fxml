<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.Region?>
<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"  fx:controller="com.example.itp_app.Employee.AssignController" prefWidth="400.0" prefHeight="400.0">
    <VBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
        <!-- TextField 1 with Label -->
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Label text="Request ID" fx:id="RequestId"/>
            <TextField fx:id="requestId" prefWidth="200"/>
        </HBox>

        <!-- TextField 2 with Label -->
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Label text="Assigned to" fx:id="Inspector"/>
            <TextField fx:id="inspector" prefWidth="200"/>
        </HBox>

        <!-- TextField 3 with Label -->
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Label text="Admin assigning" fx:id="Admin"/>
            <TextField fx:id="admin" prefWidth="200"/>
        </HBox>

        <!-- Buttons: Add and Remove, right-aligned with TextField's end -->
        <HBox spacing="5" alignment="CENTER_RIGHT">
            <Region HBox.hgrow="ALWAYS"/> <!-- Spacer to push buttons to align with TextField end -->
            <Button text="assign" fx:id="assign" onAction="#setAssign"/>
        </HBox>
    </VBox>
</AnchorPane>
